            <TextView
                android:id="@+id/seedingAmount4"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/singleSowingRate4"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reSowingRate4"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/missSowingRate4"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deviationRate4"
                android:background="@drawable/table_border"
