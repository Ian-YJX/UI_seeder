<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_page4_seed_watch">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 表头行 -->
        <TableRow android:background="@drawable/table_border">

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="名称"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="株距(cm)"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="播种量"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="单播(%)"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="重播(%)"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="漏播(%)"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="变差(%)"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="电流(mA)"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="光强"
                android:textSize="18sp" />

            <TextView
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="状态"
                android:textSize="18sp" />
        </TableRow>

        <!-- 第一行数据 -->
        <TableRow android:background="@color/green">

            <TextView
                android:id="@+id/name1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="第一列"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spacing1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/seedingAmount1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/singleSowingRate1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reSowingRate1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/missSowingRate1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deviationRate1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/current1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lightIntensity1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/status1"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />
        </TableRow>

        <!-- 第二行数据 -->
        <TableRow android:background="@drawable/table_border">

            <TextView
                android:id="@+id/name2"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="第二列"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spacing2"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/seedingAmount2"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/singleSowingRate2"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reSowingRate2"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/missSowingRate2"
