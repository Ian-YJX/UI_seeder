                android:padding="8dp"
                android:textColor="@color/red"
                android:textSize="18sp" />
        </TableRow>

        <!-- 第四行数据 -->
        <TableRow android:background="@drawable/table_border">

            <TextView
                android:id="@+id/name4"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="第四列"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spacing4"
                android:background="@drawable/table_border"
                android:padding="8dp"
