            <TextView
                android:id="@+id/status2"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />
        </TableRow>

        <!-- 第三行数据 -->
        <TableRow android:background="@drawable/table_border">

            <TextView
                android:id="@+id/name3"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:text="第三列"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spacing3"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/seedingAmount3"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/singleSowingRate3"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reSowingRate3"
                android:background="@drawable/table_border"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/missSowingRate3"
                android:background="@drawable/table_border"
                android:padding="8dp"
